<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invoiceDialogLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_dialog">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@drawable/line"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Payment Invoice"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#384246"
        android:fontFamily="@font/nunito_bold"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/singletrip"
            android:layout_gravity="center"
            android:backgroundTint="#133ac1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/routeText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Route1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#133ac1"
                android:fontFamily="@font/nunito_bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/routeText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Route2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#133ac1"
                android:fontFamily="@font/nunito_bold"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/passengerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Passenger: Student"
        android:fontFamily="@font/nunito_semibold"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/subtotalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:text="Subtotal: ₱120.00"/>

    <TextView
        android:id="@+id/discountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:text="Discount: ₱24.00"/>

    <TextView
        android:id="@+id/totalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Total: ₱96.00"
        android:textStyle="bold"
        android:textColor="#03c03c"
        android:paddingTop="8dp"
        android:textSize="20sp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:backgroundTint="#133ac1"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Confirm And Pay"
            android:textColor="#f9f9f9"
            android:fontFamily="@font/nunito_bold"
            app:cornerRadius="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:padding="20dp"
            app:icon="@drawable/exit"
            app:iconTint="@android:color/white"
            app:iconSize="24dp"
            app:backgroundTint="#384246"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>
