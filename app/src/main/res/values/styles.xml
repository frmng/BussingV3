<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="ProfileShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AccountProfileShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:popupBackground">#000</item>
        <item name="android:dropDownVerticalOffset">50dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:dropDownHorizontalOffset">100dp</item>
    </style>

    <style name="PopUpScreenTheme">
        <item name="android:popupBackground">#f9f9f9</item>
    </style>

    <style name="FirebaseAuthTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#133ac2</item>
        <item name="colorOnPrimary">#f9f9f9</item>
    </style>

    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FlatBottomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogSlideUpAnimation</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>